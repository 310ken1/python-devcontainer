{
  "name": "Python開発環境",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "remoteEnv": {
    "VIRTUAL_ENV": "/workspace/.venv",
    "UV_VENV_CLEAR": "1"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=cached",
    "source=${USERPROFILE}/.aws,target=/root/.aws,type=ro",
    "source=venv,target=/workspace/.venv,type=volume",
    "source=uv-cache,target=/home/vscode/.cache/uv,type=volume"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "njpwerner.autodocstring",
        "esbenp.prettier-vscode",
        // 開発支援ツール
        "streetsidesoftware.code-spell-checker",
        "uctakeoff.vscode-counter",
        "alefragnani.Bookmarks",
        "usernamehw.errorlens",
        "PKief.material-icon-theme",
        // AWS
        "amazonwebservices.aws-toolkit-vscode",
        // Markdown
        "shd101wyy.markdown-preview-enhanced",
        "DavidAnson.vscode-markdownlint",
        "TakumiI.markdowntable",
        "mushan.vscode-paste-image",
        // yaml
        "redhat.vscode-yaml",
        // Docker
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-containers",
        // ドキュメント
        "hediet.vscode-drawio",
        "42Crunch.vscode-openapi",
        // テスト
        "humao.rest-client",
        // Visual Studio Code
        "MS-CEINTL.vscode-language-pack-ja"
      ],
      "settings": {
        // OpenAPI Editor設定
        "openapi.defaultPreviewRenderer": "redoc"
      }
    }
  },
  "postAttachCommand": "sh .devcontainer/postAttachCommand.sh"
}
